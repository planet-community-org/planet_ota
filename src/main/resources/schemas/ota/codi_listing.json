{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://codi-dl.planetcom.co.uk/schemas/codi_listing.json",
  "title": "CoDi asset listing",
  "description": "This is a listing of CoDi assets for the Cosmo Communicator",
  "type": "object",
  "properties": {
    "lastUpdated": {
      "type": "string"
    },
    "availableAssets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "assetFileName": {
            "type": "string"
          },
          "assetType": {
            "type": "string",
            "enum": [
              "CODI_BOOTLOADER",
              "CODI_CODID",
              "CODI_FIRMWARE",
              "CODI_RESOURCES",
              "GEMINI_ANDROID_FW",
              "COSMO_ANDROID_FW",
              "ASTRO_ANDROID_FW"
            ]
          },
          "assetVersion": {
            "type": "string"
          },
          "assetDownloadUrl": {
            "type": "string"
          },
          "assetSha1": {
            "type": "string"
          },
          "assetVendor": {
            "type": "string",
            "enum": [
              "PLANET",
              "LINEAGE",
              "CODI_OS"
            ]
          }
        },
        "required": [
          "assetFileName",
          "assetType",
          "assetVersion",
          "assetDownloadUrl",
          "assetSha1",
          "assetVendor"
        ]
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "required": [
    "availableItems"
  ]
}
