{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://planet-ota.planetcom.co.uk/schemas/codi_firmware_manifest.json",
  "title": "CoDi firmware asset manifest",
  "description": "Manifest included with the CoDi firmware (varies)",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "firmwareVersion": {
          "type": "string"
        },
        "firmwareChecksum": {
          "type": "string"
        },
        "firmwareVendor": {
          "type": "string",
          "enum": [
            "PLANET",
            "CODI_OS"
          ]
        },
        "firmwareCompatResource": {
          "type": "string"
        }
      },
      "required": [
        "firmwareVersion",
        "firmwareChecksum",
        "firmwareVendor",
        "firmwareCompatResource"
      ]
    }
  },
  "required": [
    "metadata"
  ]
}
