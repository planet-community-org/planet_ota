{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://planet-ota.planetcom.co.uk/schemas/codi_resources_manifest.json",
  "title": "CoDi resources asset manifest",
  "description": "Manifest included with the CoDi resources (varies)",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "resourceVersion": {
          "type": "string"
        },
        "resourceChecksum": {
          "type": "string"
        },
        "resourceVendor": {
          "type": "string",
          "enum": [
            "PLANET",
            "CODI_OS"
          ]
        }
      },
      "required": [
        "resourcesVersion",
        "resourcesChecksum",
        "resourcesVendor"
      ]
    }
  },
  "required": [
    "metadata"
  ]
}
